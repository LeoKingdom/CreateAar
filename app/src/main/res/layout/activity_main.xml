<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/scan_and_conn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="scan"
            android:text="扫描并连接"
            android:textSize="30sp"
            android:visibility="invisible"
            android:clickable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="notify"
            android:text="开启通知"
            android:textSize="30sp"
            android:visibility="invisible"
            android:clickable="false"
            />
        <TextView
            android:id="@+id/ota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="read"
            android:text="OTA升级包校验"
            android:textSize="30sp"
            android:visibility="invisible"
            android:clickable="false"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/mac_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="设置MAC地址"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:clickable="false"
                android:inputType="text"
                />
            <Button
                android:onClick="connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接设备"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789abcdefABCDEF"
                android:hint="设置包时间间隔"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:clickable="false"
                android:inputType="number"
                />
            <Button
                android:onClick="time_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="设置"
                android:layout_marginLeft="@dimen/dp_20"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/ota_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:onClick="write"
            android:text="OTA升级"
            android:textSize="30sp" />
            <Button
                android:id="@+id/ot_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="开始"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_bg_selector"
                android:textColor="@color/color_white"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="write"
                android:text="高通芯片升级"
                android:textSize="30sp" />
            <Button
                android:id="@+id/gt_btn"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="开始"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_bg_selector"
                android:enabled="false"
                android:textColor="@color/color_white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="write"
            android:text="写入命令"
            android:textSize="30sp"
            android:visibility="invisible"
            android:clickable="false"
            />



        <TextView
            android:id="@+id/show_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    <com.ly.bluetoothhelper.widget.ProgressDialogWidget
        android:id="@+id/progress_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <com.ly.bluetoothhelper.widget.LoadingWidget
        android:id="@+id/main_loading_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>